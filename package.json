{
    "name": "next-tailwind-starter",
    "version": "12.11.3",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "NEXT_TELEMETRY_DISABLED=1 next build",
        "start": "next start --port ${PORT:=3000}",
        "lint": "next lint",
        "lint:fix": "eslint src --fix && yarn format",
        "format": "prettier --write src",
        "build-stats": "cross-env ANALYZE=true npm run build",
        "export": "next export",
        "build-prod": "run-s clean build export",
        "clean": "rimraf .next out",
        "build-types": "tsc --noEmit --pretty",
        "prepare": "husky install",
        "build:docker": "docker build -t $npm_package_name:latest -t $npm_package_name:v$npm_package_version .",
        "run:docker": "docker run -p 3000:3000 $npm_package_name:latest"
    },
    "dependencies": {
        "@floating-ui/react-dom": "^0.3.3",
        "@headlessui/react": "^1.4.3",
        "@heroicons/react": "^1.0.5",
        "@splitbee/web": "^0.3.0",
        "@tailwindcss/forms": "^0.4.0",
        "@tailwindcss/line-clamp": "^0.3.0",
        "@tailwindcss/typography": "^0.5.0",
        "akar-icons": "^1.9.5",
        "framer-motion": "^5.5.4",
        "next": "12.0.7",
        "next-themes": "^0.0.15",
        "phosphor-react": "^1.3.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "styled-jsx-plugin-postcss": "^4.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@next/bundle-analyzer": "^12.0.7",
        "@types/node": "^17.0.4",
        "@types/react": "^17.0.38",
        "@types/tailwindcss": "^2.2.4",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "autoprefixer": "^10.4.0",
        "clsx": "^1.1.1",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.14",
        "eslint": "^8.5.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-next": "^12.0.7",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.4",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "sharp": "^0.29.3",
        "tailwindcss": "^3.0.7",
        "typescript": "^4.5.4"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,}": [
            "eslint --fix",
            "prettier -w"
        ],
        "**/*.ts?(x)": [
            "npm run build-types"
        ],
        "src/**/*.{json,css,scss,md}": [
            "prettier -w"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "plugins": [
            "@typescript-eslint",
            "simple-import-sort"
        ],
        "extends": [
            "eslint:recommended",
            "next",
            "next/core-web-vitals",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "rules": {
            "no-unused-vars": "off",
            "no-console": "warn",
            "@typescript-eslint/explicit-module-boundary-types": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/no-var-requires": "off",
            "@next/next/no-img-element": "off",
            "simple-import-sort/exports": "warn",
            "simple-import-sort/imports": [
                "warn",
                {
                    "groups": [
                        [
                            "^@?\\w",
                            "^\\u0000"
                        ],
                        [
                            "^.+\\.s?css$"
                        ],
                        [
                            "^@/lib",
                            "^@/hooks"
                        ],
                        [
                            "^@/assets"
                        ],
                        [
                            "^@/components"
                        ],
                        [
                            "^@/"
                        ],
                        [
                            "^\\./?$",
                            "^\\.(?!/?$)",
                            "^\\.\\./?$",
                            "^\\.\\.(?!/?$)",
                            "^\\.\\./\\.\\./?$",
                            "^\\.\\./\\.\\.(?!/?$)",
                            "^\\.\\./\\.\\./\\.\\./?$",
                            "^\\.\\./\\.\\./\\.\\.(?!/?$)"
                        ],
                        [
                            "^@/types"
                        ],
                        [
                            "^"
                        ]
                    ]
                }
            ],
            "import/order": [
                "error",
                {
                    "groups": [
                        "builtin",
                        "external",
                        "internal"
                    ],
                    "pathGroups": [
                        {
                            "pattern": "react",
                            "group": "external",
                            "position": "before"
                        }
                    ],
                    "pathGroupsExcludedImportTypes": [
                        "react"
                    ],
                    "newlines-between": "always",
                    "alphabetize": {
                        "order": "asc",
                        "caseInsensitive": true
                    }
                }
            ],
            "@typescript-eslint/no-unused-vars": "off",
            "unused-imports/no-unused-imports": "error",
            "unused-imports/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_"
                }
            ]
        },
        "globals": {
            "React": true,
            "JSX": true
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "prettier": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "jsxSingleQuote": true,
        "printWidth": 125,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
    }
}
